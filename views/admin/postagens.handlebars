<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-warning">Nova postagem</button></a>

{{postagens.titulo}}
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <small><b>Postagem: {{titulo}}</b></small>
            <p>Descricao: {{descricao}}</p>
            <small>Data: {{date}}</small><br>
            <small>conteudo: {{conteudo}}</small><br>
            <small>Categoria: {{categoria.nome}}</small>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Edit</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger">X</button></a>
            
        </div>
    </div>
{{else}}
    <h2>Nenhum desenho registrado</h2>
{{/each}}