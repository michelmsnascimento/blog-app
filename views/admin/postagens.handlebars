<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{postagens.titulo}}
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <small><b>Postagem: {{titulo}}</b></small>
            <p>Descricao: {{descricao}}</p>
            <small>Data: {{date}}</small>
            <small>Categoria: {{categoria.nome}}</small>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Edit</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">X</button>
            </form>
        </div>
    </div>
{{else}}
    <h2>Nenhum desenho registrado</h2>
{{/each}}