<h2>Maquinas</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-warning">Cadastrar nova máquina</button></a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Código</th>
      <th scope="col">Descrição</th>
      <th scope="col">Data de alteração</th>
      <th scope="col">Editar</th>
      <th scope="col">Excluir</th>
    </tr>
  </thead>
{{#each categorias}}
  
    <tr> 

      <td>{{nome}}</td>
      <td>{{slug}}</td>
      <td>{{date}}</td>
      <td><a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Edit</button></a></td>
      <td><a href="/admin/categorias/delete/{{_id}}"><button class="btn btn-danger">X</button></a></td>
      
    </tr>
  

{{else}}
    <h2>Nenhum desenho Liberado</h2>
{{/each}}
</table>
