<div class="card text-center">
  <div class="card-header">
    Bem vindo ao Blog do node
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Crie uma Conta</a>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
<hr>
<h2>Postagens Recentes:</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <small>{{categoria.nome}}</small>
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagens/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small>
        <small>Data de publicação: {{date}}</small>
        
    </div>
</div>
{{else}}

{{/each}}